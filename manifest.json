{
  "manifest_version": 2,
  "name": "Thunderbird Proofreader",
  "version": "1.0",
  "description": "An extension to proofread emails using ChatGPT.",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["storage", "compose", "messagesRead", "tabs"],
  "browser_action": {
    "default_title": "Proofer Settings",
    "default_popup": "options.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png"
    }
  },
  "compose_action": {
    "default_title": "Proof",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "applications": {
    "gecko": {
      "id": "proofreader@thunderbird"
    }
  },
"web_accessible_resources": [
  "manage_prompts.html",
  "manage_prompts.js",
  "view_key.html",
  "view_key.js"
  ]
}

